<Window x:Class="Borbat.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Borbat"
        mc:Ignorable="d"
        Title="Авторизация" Height="415" Width="410" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid Style="{StaticResource GridStyle}">
        <TextBox Style="{StaticResource TextBoxStyle}" x:Name="Login" Margin="59,60,59,270" Text="Логин"/>
        <PasswordBox x:Name="PasswordPB" Style="{StaticResource PasswordBoxStyle}" Margin="59,111,59,214"/>
        <Button x:Name="EnterBTN" Style="{StaticResource ButtonStartPageStyle}" Content="Войти" Margin="100,190,100,121"/>
        <Button x:Name="RegistrationBTN" Style="{StaticResource NoAccountButton}" Content="Зарегистрируйтесь" Margin="116,296,116,52"/>
        <Label Content="Нет аккаунта?" FontFamily="Cascadia Code" FontSize="16" Margin="100,276,100,70" HorizontalContentAlignment="Center"/>
    </Grid>
</Window>
